<style>
  .works-container {
    margin: 1em;
    padding: 0.5em;

    & h2 {
      color: #80ff60;
    }
  }

  .proyects-container {
    display: grid;
    gap: 1em;
    justify-items: center;
    align-items: center;
    padding: 1em;
  }

  .proyect-container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100%;
    & div {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      gap: 1em;
      padding: 1.5em;
    }
    img {
      max-width: 100%;
    }
    a {
      color: #80ff60;
      text-decoration: none;
    }
    img:hover {
      transform: scale(1.1);
      transition: all 0.3s ease-in-out;
    }
    h3 {
      color: #80ff60;
      margin: 1em;
    }

    p {
      margin: 0.5em;
    }
  }
</style>
