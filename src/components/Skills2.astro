                        <figure class="max-w-36">
                            <img src="/icons/postgre.svg" alt="postgre" />
                        </figure>
                    </section>
                    <section class="card-skills">
                        <figure class="max-w-36">
                            <img src="/icons/firebase.svg" alt="Firebase" />
                        </figure>
                    </section>
                </section>
            </article>
            <article>
                <h3 class="head-Gradient">  &lt;Framework CSS | UI Component /&gt;</h3>
                <section class="grid grid-cols-2 gap-4 p-2">
