<style>
  .switch-container {
    position: fixed;
    display: flex;
    align-items: center;
    gap: 10px;
    margin-top: 1em;
    margin-left: 1em;
    z-index: 9999;
  }

  .switch {
    position: relative;
    display: inline-flex;
    align-items: center;
    cursor: pointer;
  }

  .switch input {
    opacity: 0;
    width: 0;
    height: 0;
  }

  .slider {
    position: relative;
